{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom"],
        "module": "ES2020",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "ES2020",
        "types": ["node", "jest"]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts", "src/types", "src/**/*.tsx", "node_modules/react-hook-form/dist/types"
    ]
}